.categorysContainer {
  margin-top: 20rpx;
}
.categorysContainer .categoryImg {
  width: 100%;
  height: 370rpx;
}
.categorysContainer .categoryList {
  white-space: nowrap;
}
.categorysContainer .categoryList .categoryItem {
  display: inline-block;
  width: 200rpx;
  margin: 10rpx 20rpx;
  font-size: 24rpx;
}
.categorysContainer .categoryList .categoryItem.more {
  background: #eee;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  vertical-align: top;
}
.categorysContainer .categoryList .categoryItem image {
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
}
.categorysContainer .categoryList .categoryItem .itemText {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 64rpx;
  white-space: pre-wrap;
}


#indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-top: 20rpx;
}
#indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
}
#indexContainer .header .searchContainer {
  position: relative;
  background: #ededed;
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
}
#indexContainer .header .searchContainer .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#indexContainer .header .searchContainer .search {
  margin-left: 60rpx;
  height: 100%;
}
#indexContainer .header .searchContainer .search .placeholder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -40rpx;
}
#indexContainer .header .nickname {
  width: 144rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #f00;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
}
#indexContainer .navScroll {
  white-space: nowrap;
}
#indexContainer .navScroll .navItem {
  position: relative;
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}
#indexContainer .navScroll .navItem.active::after {
  position: absolute;
  content: "";
  display: block;
  height: 2rpx;
  width: 100%;
  background: #f00;
  left: 0;
  bottom: 2rpx;
}


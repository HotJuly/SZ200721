/* pages/song/song.wxss */
.songContainer{
  background: rgba(0,0,0,0.5);
  display:flex;
  flex-direction: column;
  align-items: center;
  height:100%;
}

.songContainer .keng{
  width:60rpx;
  height:60rpx;
  background: white;
  border-radius: 50%;
  /*
    z-index属性,想要生效,必须开启定位,或者是flex的子元素
  */
  z-index:102;
}

.songContainer .needle{
  width:192rpx;
  height:274rpx;
  position: relative;
  left:58rpx;
  top:-36rpx;
  z-index:101;
  transform:rotateZ(-20deg);
  transform-origin: 40rpx 0;
  transition:transform 400ms;
}

.songContainer.isplaying .needle{
  transform:rotateZ(0deg);
}

@keyframes run{
  /* from,to
      0%,25%,50%,100% */
  from{
    transform:rotateZ(0deg);
  }
  to{
    transform:rotateZ(360deg);
  }
}

.songContainer .discContainer{
  width:598rpx;
  height:598rpx;
  position: relative;
  top:-180rpx;
  /* transition:transform 400ms; */
  /* transform:rotateZ(360deg); */
  /*animation:关键帧动画名称 一次动画的执行周期 执行多少次 运行模式(先快后慢还是匀速);  */
  animation:run 4s infinite linear;
  animation-play-state: paused;
}

.songContainer.isplaying  .discContainer{
  animation-play-state: running;
}

.songContainer .discContainer .disc{
  position: relative;
  width:100%;
  height:100%;
  z-index:100;
}

.songContainer .discContainer .bigImg{
  position: absolute;
  width:370rpx;
  height:370rpx;
  left: 0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  z-index:99;
}


/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}

.audioContainer{
  position: absolute;
  bottom:200rpx;
  display:flex;
  width:640rpx;
  height:80rpx;
  line-height:80rpx;
}

.audioContainer .barContainer{
  width:450rpx;
  height:4rpx;
  background:rgba(0, 0, 0, 0.4);
  margin:auto;
}

.audioContainer .barContainer .audio-current-time{
  position: relative;
  width:50%;
  height:4rpx;
  background:red;
}

.audioContainer .barContainer .audio-current-time .audio-time-point{
  position: absolute;
  top:-4rpx;
  right:-6rpx;
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background:white;
}


.barContainer{
  display:flex;
  align-items: center;
}

.barContainer .durationBar{
  width:450rpx;
  height:4rpx;
  background: rgba(0, 0, 0, 0.4);
  margin:0 20rpx;
}

.barContainer .durationBar .currentBar{
  position: relative;
  width:20%;
  height:4rpx;
  background: red;
}

.barContainer .durationBar .currentBar .box{
  position: absolute;
  right:-6rpx;
  top:-4rpx;
  width:12rpx;
  height:12rpx;
  background: white;
  border-radius: 50%;
}
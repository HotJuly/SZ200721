<view class="indexContainer">

  <!-- banner区域 -->
  <swiper
    class="bannerSwiper"
    indicator-dots="true"
    indicator-color="ivory"
    indicator-active-color="#d43c33"
    >
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 导航区域 -->
  <view class="navContainer">
    <view class="navItem" bindtap="toRecommendSong">
      <text class="iconfont icon-meirituijian-"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont  icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont  icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲区域 -->
  <view class="recommnedContainer">
    <NavHeader moduleTitle="推荐歌曲" moreTitle="为你精心推荐" />
    <scroll-view class="recommendSrcoll" scroll-x enable-flex>
      <view
       class="scrollItem"
       wx:for="{{recommendList}}"
       wx:key="id"
       wx:for-item="recommendItem"
      >
        <image src="{{recommendItem.picUrl}}"></image>
        <view>
          {{recommendItem.name}}
        </view>
      </view>
      
    </scroll-view>
  </view>

  <!-- 排行榜区域 -->
  <view class="topContainer">
    <NavHeader moduleTitle="排行榜" moreTitle="热歌风向标" />
    <swiper class="topSwiper" next-margin="50rpx">
      <swiper-item wx:for="{{topList}}">
        <view class="topItem">
          <view class="title">{{item.name}}></view>
          <view>
            <view class="contentItem" wx:for="{{item.list}}" wx:for-item="contentItem" wx:for-index="contentIndex">
              <image class="musicImg" src="{{contentItem.al.picUrl}}"></image>
              <text class="index">{{contentIndex+1}}</text>
              <text class="name">{{contentItem.al.name}}</text>
            </view>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>

</view>